</p>

<!-- ========================== AFFICHAGE ASSOCIATION ============================================ -->
<br />
<h3>Livres associés à ce membre</h3>

<table class="table">
    <!--COLUMNS  NAME-->
    <tr>
        <th>
            Titre
        </th>
        <th>
            Auteur
        </th>
        <th>
            Categorie
        </th>
        <th></th>
    </tr>

    @foreach (var p in Model.Membre.Prets)
    {
        if (p.MembreID == Model.MembreID)
        {
            <!--VALUES OF COLUMNS  -->
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => p.Livre.Titre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => p.Livre.Auteur)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => p.Livre.Categorie)
                </td>
            </tr>
        }
    }

</table>